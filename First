    <script>
        (function() {
            // --- Chart Colors & Options ---
            const chartColors = {
                primary: '#087a8c',
                secondary: '#f08721',
                tertiary: '#4a8c03',
                highlight: '#a3ccd4',
                grid: 'rgba(0, 0, 0, 0.05)',
                text: '#087a8c'
            };

            const defaultTooltipCallback = {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            };

            const defaultOptions = {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    legend: {
                        labels: {
                            color: chartColors.text,
                            font: { family: 'Cairo' }
                        }
                    },
                    tooltip: {
                        callbacks: defaultTooltipCallback,
                        bodyFont: { family: 'Cairo' },
                        titleFont: { family: 'Cairo' }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: chartColors.text, font: { family: 'Cairo' } },
                        grid: { color: chartColors.grid }
                    },
                    y: {
                        ticks: { color: chartColors.text, font: { family: 'Cairo' } },
                        grid: { color: chartColors.grid }
                    }
                }
            };
            
            // --- Chart 1: Vacancy ---
            if (document.getElementById('vacancyChart')) {
                const ctx = document.getElementById('vacancyChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['2020', '2021', '2022', '2023', '2024'],
                        datasets: [{
                            label: 'Metro Area Vacancy Rate',
                            data: [5.2, 5.0, 4.8, 4.9, 4.7],
                            borderColor: chartColors.primary,
                            backgroundColor: 'rgba(8, 122, 140, 0.1)',
                            fill: true,
                            tension: 0.1
                        }]
                    },
                    options: { ...defaultOptions }
                });
            }

            // --- Chart 2: Rent ---
            if (document.getElementById('rentChart')) {
                const ctx = document.getElementById('rentChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Local Market', ['Comparable', 'Market Avg.'], 'State Avg.'],
                        datasets: [{
                            label: 'Avg. Industrial Rent (NNN)',
                            data: [7.50, 8.25, 8.10],
                            backgroundColor: [chartColors.primary, chartColors.secondary, chartColors.tertiary],
                            borderColor: '#fff',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        ...defaultOptions,
                        plugins: {
                            ...defaultOptions.plugins,
                            legend: { display: false }
                        }
                    }
                });
            }

            // --- Chart 3: Industry Scoring ---
            if (document.getElementById('industryChart')) {
                const ctx = document.getElementById('industryChart').getContext('2d');
                new Chart(ctx, {
                    type: 'radar',
                    data: {
                        labels: ['Market Demand', 'Workforce', 'Infrastructure', 'Logistics', 'Incentive Match'],
                        datasets: [{
                            label: 'Advanced Mfg.',
                            data: [9, 9, 8, 7, 9],
                            borderColor: chartColors.primary,
                            backgroundColor: 'rgba(8, 122, 140, 0.2)',
                            pointBackgroundColor: chartColors.primary
                        }, {
                            label: 'Logistics',
                            data: [8, 7, 9, 10, 6],
                            borderColor: chartColors.secondary,
                            backgroundColor: 'rgba(240, 135, 33, 0.2)',
                            pointBackgroundColor: chartColors.secondary
                        }, {
                            label: 'Life Sciences',
                            data: [7, 8, 7, 6, 8],
                            borderColor: chartColors.tertiary,
                            backgroundColor: 'rgba(74, 140, 3, 0.2)',
                            pointBackgroundColor: chartColors.tertiary
                        }]
                    },
                    options: {
                        ...defaultOptions,
                        scales: {
                            r: {
                                beginAtZero: true,
                                max: 10,
                                ticks: {
                                    backdropColor: 'transparent',
                                    color: chartColors.text,
                                    font: { family: 'Cairo' }
                                },
                                grid: { color: chartColors.grid },
                                pointLabels: {
                                    color: chartColors.text,
                                    font: { family: 'Cairo', size: 12 }
                                }
                            }
                        }
                    }
                });
            }

            // --- Chart 4: Funding ---
            if (document.getElementById('fundingChart')) {
                const ctx = document.getElementById('fundingChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Public Grants', 'Local Incentives', 'Private Investment', 'Partnerships'],
                        datasets: [{
                            data: [30, 25, 35, 10],
                            backgroundColor: [chartColors.primary, chartColors.secondary, chartColors.tertiary, chartColors.highlight],
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        ...defaultOptions,
                        plugins: {
                            ...defaultOptions.plugins,
                            legend: {
                                ...defaultOptions.plugins.legend,
                                position: 'bottom'
                            }
                        },
                        scales: {
                            x: { display: false },
                            y: { display: false }
                        }
                    }
                });
            }

            // --- Tabbed Interface Logic ---
            const tabButtons = document.querySelectorAll('.tab-button');
            const contentPanes = document.querySelectorAll('.tab-pane');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const target = button.getAttribute('data-target');

                    // Update button active state
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');

                    // Update content pane visibility
                    contentPanes.forEach(pane => {
                        if (pane.id === target.substring(1)) {
                            pane.classList.add('active');
                        } else {
                            pane.classList.remove('active');
                        }
                    });
                });
            });

        })();
    </script>
</body>
</html>
